# top-most EditorConfig file
root = true

# Defaults for every file
[*]
end_of_line = lf
charset = utf-8

insert_final_newline = true
trim_trailing_whitespace = true

# Idris source files
[*.{idr,ipkg,tex,yaff,lidr}]
indent_style = space
indent_size = 2

# Various configuration files
[{*.yml,.ecrc}]
indent_style = space
indent_size = 2

[*.{md,rst}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4
shell_variant = posix
switch_case_indent = true

[{Makefile,*.mk}]
indent_style = tab

[expected]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4
